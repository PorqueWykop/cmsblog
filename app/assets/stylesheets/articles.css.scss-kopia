	margin: 200px;
	padding: 50px;
	border: 5px solid #ccc;
	background: #E0E0E0;
	width: 150px; /* ie5win fudge begins */
	voice-family: "\"}\"";
	voice-family:inherit;
	width: 120px;
	opacity:0.4;
	}
html>body #right {
	width: 120px; /* ie5win fudge ends */
	}

