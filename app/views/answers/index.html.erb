<h1>Listing answers</h1>

<table>
  <tr>
    <th>Article</th>
    <th>Status</th>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @answers.each do |answer| %>
  <tr>
    <td><%= answer.article_id %></td>
    <td><%= answer.status %></td>
    <td><%= answer.name %></td>
    <td><%= link_to 'Show', [@article, answer] %></td>
    <td><%= link_to 'Edit', edit_article_answer_path([@article, answer]) %></td>
    <td><%= link_to 'Destroy', [@article, answer], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

